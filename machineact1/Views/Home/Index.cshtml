@{
    ViewData["Title"] = "Home Page";
    string FirstName = "Karl";
    string LastName = "Tacula";
    DateTime birthday = new DateTime(2002, 12, 10);
    string Email = "karl.tacula.cics@ust.edu.ph";
    string[] emailExtract = Email.Split('@');
    string emailUsername = emailExtract[0];
    string emailDomain = emailExtract[1];
    bool IsTenured = false;
    decimal SalaryPerHour = 8.00M;
    int age = DateTime.Now.Year - birthday.Year;
    if (DateTime.Now < birthday.AddYears(age)) age--;

    decimal salaryPerDay = SalaryPerHour * 8;
    decimal salaryPerMonth = salaryPerDay * 30;
    if (IsTenured) salaryPerMonth += 500.00M;

    decimal PrelimGrade = 78;
    decimal FinalGrade = 99;
    decimal SemGrade = (PrelimGrade + FinalGrade) / 2;
    string TransmutedGrade = "FA";
    if (SemGrade >= 96)
    {
        TransmutedGrade = "1.00";
    }
    else if (SemGrade >= 94 )
    {
        TransmutedGrade = "1.25";
    }
    else if (SemGrade >= 92)
    {
        TransmutedGrade = "1.50";
    }
    else if (SemGrade >= 89)
    {
        TransmutedGrade = "1.75";
    }
    else if (SemGrade >= 87)
    {
        TransmutedGrade = "2.00";
    }
    else if (SemGrade >= 84)
    {
        TransmutedGrade = "2.25";
    }
    else if (SemGrade >= 82)
    {
        TransmutedGrade = "2.50";
    }
    else if (SemGrade >= 79)
    {
        TransmutedGrade = "2.75";
    }
    else if (SemGrade >= 75)
    {
        TransmutedGrade = "3.00";
    }
    else if (SemGrade <= 74)
    {
        TransmutedGrade = "5.00";
    }
}

<div>
    <h1 class="display-4">Machine Activity Outputs</h1>
    <p>Output A: I'm @FirstName @LastName and I'm @age years old!</p>

    <h1>Output B:</h1>
    <p>Email: @Email</p>
    <p>Domain: @emailDomain</p>
    <p>Username: @emailUsername</p>

    <h1>Output C:</h1>
    <p>Name: @FirstName @LastName</p>
    <p>Email: @Email</p>
    <p>Status: @(IsTenured ? "Permanent" : "Probationary")</p>
    <p>Daily Salary: $@salaryPerDay.ToString("F2")</p>
    <p>Monthly Salary: $@salaryPerMonth.ToString("F2")</p>

    <h1>Output D:</h1>
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Prelim</th>
            <th>Final</th>
            <th>Semestral Grade</th>
            <th>Transmuted Grade</th>
        </tr>
        <tr>
            <td>@FirstName @LastName</td>
            <td>@PrelimGrade</td>
            <td>@FinalGrade</td>
            <td>@SemGrade.ToString("F2")</td>
            <td>@TransmutedGrade</td>
        </tr>
    </table>

</div>
